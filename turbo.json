{
    "$schema": "https://turbo.build/schema.json",
    "tasks": {
        "build": {
            "dependsOn": ["^build"],
            "inputs": ["$TURBO_DEFAULT_INPUTS", ".env*"],
            "outputs": ["dist/**", ".next/**"]
        },
        "dev": {
            "cache": false,
            "persistent": true
        },
        "lint": {
            "dependsOn": ["^build"]
        },
        "check-types": {
            "dependsOn": ["^check-types"]
        },
        "start": {}
    }
}
