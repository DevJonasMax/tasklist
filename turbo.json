{
    "$schema": "https://turbo.build/schema.json",
    "tasks": {
        "build": {
            "dependsOn": ["^build"],
            "inputs": ["$TURBO_DEFAULT_INPUTS", ".env"],
            "outputs": ["dist/**", ".next/**", "node_modules/.prisma/**"],
            "env": [
                "DATABASE_URL",
                "JWT_SECRET_KEY",
                "CORS_ORIGIN"
            ]
        },
        "dev": {
            "cache": false,
            "persistent": true
        },
        "lint": {
            "dependsOn": []
        },
        "check-types": {
            "dependsOn": ["^check-types"]
        },
        "start": {}
    }
}
